{
  "scopeName": "source.qplan",
  "name": "QPlan",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#params-directive"
    },
    {
      "include": "#variable-assignment"
    },
    {
      "include": "#variable-set"
    },
    {
      "include": "#variable-property-access"
    },
    {
      "include": "#variable-usage-heuristic"
    },
    {
      "include": "#meta"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#attributes"
    },
    {
      "include": "#support-modules"
    },
    {
      "include": "#argument-usage"
    },
    {
      "include": "#module-call"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.qplan",
          "match": "//.*$"
        },
        {
          "name": "comment.line.number-sign.qplan",
          "match": "#.*$"
        },
        {
          "name": "comment.block.qplan",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "params-directive": {
      "begin": "^\\s*(@)(params)\\b",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.directive.qplan"
        },
        "2": {
          "name": "keyword.other.qplan"
        }
      },
      "end": "$",
      "patterns": [
        {
          "match": "\\b[a-zA-Z_]\\w*\\b",
          "name": "variable.other.readwrite.qplan"
        },
        {
          "include": "#strings"
        },
        {
          "match": ","
        }
      ]
    },
    "meta": {
      "patterns": [
        {
          "name": "meta.directive.qplan",
          "begin": "^\\s*@",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.directive.qplan"
            }
          },
          "end": "$",
          "patterns": [
            {
              "name": "keyword.other.qplan",
              "match": "\\b(title|summary|version|since|params)\\b"
            },
            {
              "include": "#strings"
            },
            {
              "include": "#numbers"
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.qplan",
          "match": "\"(?:\\\\.|[^\"\\\\])*\""
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.qplan",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.qplan",
          "match": "\\b(if|else|while|each|in|parallel|jump|to|stop|skip|continue|break|set|return)\\b"
        },
        {
          "name": "keyword.control.flow.qplan",
          "match": "\\b(plan|step)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.qplan",
          "match": "\\b(true|false|undefined|null)\\b"
        },
        {
          "name": "keyword.operator.logical.qplan",
          "match": "\\b(AND|OR|NOT|EXISTS|NOT_EXISTS|and|or|not|exists|not_exists)\\b"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.qplan",
          "match": "\\b(id|desc|type|onError|concurrency|ignoreErrors)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.qplan",
          "match": "->|==|!=|>=|<=|=|>|<|\\+|-|\\*|/|\\(|\\)"
        }
      ]
    },
    "support-modules": {
      "patterns": [
        {
          "name": "support.function.qplan",
          "match": "\\b(var|print|echo|sleep|file|math|future|join|json)\\b"
        }
      ]
    },
    "variable-assignment": {
      "patterns": [
        {
          "match": "(->)\\s*([a-zA-Z_][\\w]*)",
          "captures": {
            "1": {
              "name": "keyword.operator.qplan"
            },
            "2": {
              "name": "variable.other.readwrite.qplan"
            }
          }
        }
      ]
    },
    "variable-set": {
      "patterns": [
        {
          "match": "\\b(set)\\s+([a-zA-Z_][\\w]*)",
          "captures": {
            "1": {
              "name": "keyword.control.qplan"
            },
            "2": {
              "name": "variable.other.readwrite.qplan"
            }
          }
        }
      ]
    },
    "variable-property-access": {
      "patterns": [
        {
          "match": "\\b([a-zA-Z_]\\w*)(\\.)([a-zA-Z_]\\w*)",
          "captures": {
            "1": {
              "name": "variable.other.readwrite.qplan"
            },
            "2": {
              "name": "punctuation.accessor.qplan"
            },
            "3": {
              "name": "variable.other.property.qplan"
            }
          }
        },
        {
          "match": "\\b([a-zA-Z_]\\w*)(\\[)",
          "captures": {
            "1": {
              "name": "variable.other.readwrite.qplan"
            },
            "2": {
              "name": "keyword.operator.qplan"
            }
          }
        }
      ]
    },
    "variable-usage-heuristic": {
      "patterns": [
        {
          "match": "\\b(if|while|return)\\s+([a-zA-Z_]\\w*)",
          "captures": {
            "1": {
              "name": "keyword.control.qplan"
            },
            "2": {
              "name": "variable.other.readwrite.qplan"
            }
          }
        }
      ]
    },
    "argument-usage": {
      "patterns": [
        {
          "match": "\\b([a-zA-Z0-9_]+)(=)([a-zA-Z_][\\w]*)",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.qplan"
            },
            "2": {
              "name": "keyword.operator.assignment.qplan"
            },
            "3": {
              "name": "variable.other.readwrite.qplan"
            }
          }
        }
      ]
    },
    "module-call": {
      "patterns": [
        {
          "name": "support.function.qplan",
          "match": "^\\s*(?!(?:step|plan|if|else|while|each|in|parallel|jump|to|stop|skip|continue|break|set|return|var|print|echo|sleep|file|math|future|join|json)\\b)([a-zA-Z_][\\w]*)"
        }
      ]
    }
  }
}